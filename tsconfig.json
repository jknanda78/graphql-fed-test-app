{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": ".",
    "paths": {
      "@tools/*": ["./tools/*"],
      "@articles-subgraph/*": ["./articles-subgraph/src/*"],
      "@user-subgraph/*": ["./user-subgraph/src/*"],
      "@user-data-access/*": ["./user-subgraph/src/data-access/*"],
      "@articles-data-access/*": ["./articles-subgraph/src/data-access/*"],
    }
  },
  "include": ["src/**/*", "tools", "articles-subgraph/**/*", "user-subgraph/**/*"],
  "exclude": [
    "node_modules", 
    "**/*.spec.ts"
  ]
}
